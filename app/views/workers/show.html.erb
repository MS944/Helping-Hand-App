<%= stylesheet_link_tag "worker-profile"%>

<body>
<h1><%= @worker.username %></h1>
  <h4>Name</h4>
  <p><%= @worker.firstname %><%= @worker.lastname %></p>
  <h4>Email</h4>
  <p><%= @worker.email %></p>
  <h4>About Me</h4>
  <%= @worker.description %>
  <h4>Experience</h4>
  <%= @worker.experience %>


<li>
<%= link_to "Back", :back %>
</li>
<div>
  <h4>Reviews</h4>
  <% unless @worker.worker_reviews.empty? %>
    
    <% @worker.worker_reviews.each do | review |%>
      <h5>Title: <%= review.content%> </h5>
      <h6>Posted on: <%= review.created_at.strftime("%Y-%m-%d") %></h6>
      <%# <p><%= workerreview.review </p> %>
      
      <hr>
    <% end %>
  
  <% end %>
  </div>

  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalScrollable">
  list of job that you have completed:
  </button>


<div class="modal" id="exampleModalScrollable" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenteredLabel">list of job that you have completed</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% @worker.jobs.each do | job |%>
        <div class="list-group">
            <div class="list-group-item list-group-item-action flex-column align-items-start">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= job.title%></h5>
                <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                  
                    <button type="button" class="btn btn-secondary"><%= link_to "Show", show_job_path(job) %></button>
                    <button type="button" class="btn btn-secondary"><%= link_to "Edit", edit_job_path(job) %></button>
                    <button type="button" class="btn btn-secondary"><%= link_to "Delete", show_job_path(job) %></button>
                  
                </div>
              </div>
              <p class="mb-1"><%= job.description%></p>
              
            </div>
        </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
</body>