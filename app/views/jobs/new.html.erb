<div class= "create-new-job">
  <div class="container new-job" id="data-enter">
    <div class="row">
      <div class="col-md-3">
        <div class="contact-info">
        
        <i class="fas fa-dolly"></i>
          <img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image"/>
          <h2>Add new job</h2>
          <%# <h4>We would love to hear from you !</h4> %>
        </div>
      </div>
      <div class="col-md-9">

      <% if customer_signed_in? %>
      <%= form_for @job, url: jobs_path, :html => { :multipart => true } do |f| %>

        <div class="contact-form">
          <div class="form-group">
            <%= f.label(:title, :class => 'control-label col-sm-2')%>
            
            <div class="col-sm-10">
            <%= f.text_field(:title, class: "form-control",id:"fname", placeholder:"Title")%>          
            
            </div>
          </div>
          
          
          <div class="form-group">
            <%= f.label(:description, :class => 'control-label col-sm-2')%>
          
            <div class="col-sm-10">
            <%= f.text_area(:title, class:"form-control", rows:"5", id:"comment", placeholder:"Description")%>  
            <%# <textarea class="form-control" rows="5" id="comment"></textarea> %>
            </div>
          </div>
          <div class="contact-form">
          <div class="form-group">
            <%= f.label(:price, :class => 'control-label col-sm-2')%>
            <div class="col-sm-10">
              <%= f.text_field(:title, class: "form-control",id:"fname", placeholder:"Price")%>          
            </div>
          </div>
          <div class="form-group">
            <%= f.label(:job_image, :class => 'control-label col-sm-3')%>
            <div class="col-sm-10">
            <%= f.file_field(:uploaded_image, accept: 'image/jpg, image/png') %>
              <%# <%= f.text_field(:title, class: "form-control",id:"fname", placeholder:"Price")%>           
            </div>
          </div>
          <%# <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
            </div>
          </div> %>
          <div class="form-group">
              <%= f.submit "Submit", class:"btn btn-success" %>
          </div>
          <% end %>
        <% end %>

        <br/>
        <%= link_to "<< Back", :back %>
        </div>
      </div>
    </div>
  </div>
</div>