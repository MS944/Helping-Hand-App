<h1>Add new job</h1>

<form action="<%= jobs_path %>" method="POST">
  <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />
<div class="form-group">
  <label>Title</label>
    <input type="text" name="title" />
</div>
  <label>Description</label>
    <input type="textarea" name="description" />

  <label>Price</label>
    <input type="number" name="rating" />

    <input type="submit" value="Create" />
</form>


<% if customer_signed_in? %>
  <%= form_for @job, url: jobs_path, :html => { :multipart => true } do |f| %>
    
<div class="form-group">
  <%= f.label(:title, :class => 'col-sm-2 control-lable')%>
  <div class="col-sm-10">
    <%= f.text_field(:title, class: "form-control")%>
  </div>
</div>


<div class="form-group">
  <%= f.label(:description, :class => 'col-sm-2 control-lable')%>
  <div class="col-sm-10">
    <%= f.text_field(:description, class: "form-control")%>
  </div>
</div>

<div class="form-group">
  <%= f.label(:price, :class => 'col-sm-2 control-lable')%>
  <div class="col-sm-10">
    <%= f.text_field(:price, class: "form-control")%>
  </div>
</div>


    
      
      <%= f.label(:job_image) %>
      <%= f.file_field(:uploaded_image, accept: 'image/jpg, image/png') %>
    
    

<div class="form-buttons">
    
    <%= submit_tag("Create") %>
</div>
<% end %>
<% end %>
<%= link_to "Back", :back %>