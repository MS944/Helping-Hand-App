<h1>Add new job</h1>

<%= form_for @job do |f| %>

  <%= f.label :title %><br />
  <%= f.text_field :title, placeholder: "Job Title"%>

  <%= f.label :description %><br />
  <%= f.text_area :description, placeholder: "Description"%>

  <%= f.label :price %><br />
  <%= f.number_field :price, placeholder: "Price"%>

  <%= f.submit "Submit"%>

<% end %>


<%= link_to "Back", :back %>