<h1>Edit your job!</h1>

<form action="<%= show_job_path %>" method="POST">
    <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />

    <input type="hidden" name="_method" value="patch" />

    <label>Title</label>
    <input type="text" name="title" value="<%= @job.title %>" />

    <label>Description</label>
    <input type="textarea" name="description" value="<%= @job.description%>" />

    <label>Price</label>
    <input type="number" name="rating" value="<%= @job.price" />

    <input type="submit" value="Update!" />
</form>
<%= link_to "Back", :back %>