<h2><%= @job.title %></h2>

<h3>Description</h3>
<p><%= @job.description %></p>

<h3>posted by:</h3>
<p><%= @job.customer.username %></p>
<p>Job Creator: <%=link_to  @job.customer.username, customer_path(@job.customer) %></p>
  <p>Genre: <%= @job.description %></p>
  
  <%= render "layouts/shared/stripe_form" , job: @job%>

<% if @job.uploaded_image.attached? %>
  <%= image_tag @job.uploaded_image.service_url, class: 'image-size' %>
<% else %>
  <p>No image for this job</p>
<% end %>




<%= link_to 'Delete', show_job_path(@job), method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to "Back", :back %>