
<div class="show_job_container">
  <div class="job_title">
    <u><h2><%= @job.title %></h2></u>
  </div>
    <div class="job_bio">
      <div class="job_description_title">
        <h4>Description</h4>
      </div>
      <div class="job_description">
        <p><%= @job.description %></p>
      </div>
      <div class="price_area">
        <% if customer_signed_in? && @job.accepted == true %>
          <%= render "layouts/shared/stripe_form" , job: @job%>
        <% else %>
        <div class="price_area_title">
          <h4>Price</h4>
        </div>
        <div class="job_price">
          <p>$<%= @job.price %><p>
        <% end %>
        </div>
      </div>

      <div class="job_owner_title">
        <h4>Job posted by:</h4>
      </div>
      <div class="job_owner">
        <p><%=link_to  @job.customer.username, customer_path(@job.customer) %></p>
      </div>

      <div class="job_accepted_status">
        <% if @job.accepted %>
          <p>job accepted!</p>
        <% else %>
          <p>Job not accepted</p>
        <% end %><rb>

        <% if worker_signed_in? && !@job.accepted %>
          <%= link_to 'Accept job', show_job_path(@job, worker: current_worker.id),  method: :accept %>
        <% end %>
      </div>
            
     <%= link_to "Back", :back %>
  </div>

  <div class="job_image">
      <% if @job.uploaded_image.attached? %>
       <%= image_tag @job.uploaded_image.service_url %>
      <% else %>
       <p>No image for this job</p>
      <% end %>
  </div>
</div>