<h2><%= @job.title %></h2>

<h3>title</h3>
<p><%= @job.title%></p>
<h3>Description</h3>
<p><%= @job.description %></p>
<h3>Price</h3>
<p><%= @job.price %></p>

<% if @job.uploaded_image.attached? %>
  <%= image_tag @job.uploaded_image.service_url, class: 'image-size' %>
<% else %>
  <p>No image for this job</p>
<% end %>




<%= link_to 'Delete', show_job_path(@job),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
<%= link_to "Back", :back %>