<div class="customer-profile">
  <h1><%= @customer.username%></h1>
  <hr>
  <h4>Name</h4>
  <p><%= @customer.firstname %> <%= @customer.lastname %></p>
  <h4>Email</h4>
  <p><%= @customer.email %></p>



  
  <%# <%= render "layouts/shared/stripe_form" %>
  
    <%= link_to "edit", edit_customer_path(@customer) %> 
    <%= link_to "delete",customer_path(@customer), method: :delete %>
  
  <hr>
</div>
<div>
  <h4>Reviews</h4>
    <%= render "customer_reviews/customer-review" %>
  </div>
  <%= link_to 'Add new job!', new_job_path %>


  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalScrollable">
  list of your posted job
  </button>


<div class="modal" id="exampleModalScrollable" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenteredLabel">jobs that you have been posted</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% @customer.jobs.each do | job |%>
        <% @job_price = job.price %>
        <div class="list-group">
            <div class="list-group-item list-group-item-action flex-column align-items-start">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= job.title%></h5>
                <h6 class="status">Status:<%= (job.accepted == true ? "Accepted" : "Pending" )%></h6>

                <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                    <% if job.accepted == true %>
                      <button type="button" class="btn btn-secondary"><%= link_to 'Pay Now', show_job_path(job) %></button>
                    <% end %>
                    <button type="button" class="btn btn-secondary"><%= link_to "Show", show_job_path(job) %></button>
                    <button type="button" class="btn btn-secondary"><%= link_to "Edit", edit_job_path(job) %></button>
                    <button type="button" class="btn btn-secondary"><%= link_to "Delete", show_job_path(job),  method: :delete,
              data: { confirm: 'Are you sure?' } %></button>
                  
                </div>
              </div>
              <p class="mb-1"><%= job.description%></p>
              
            </div>
        </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
