<div class="customer-index-page">
<h1>Available Customers</h1>
  <div class="customershelf">
    <% @customers.each do |customer| %>
      <div class="customer-card bg-light">
        <div class="customer-description">
          
          <h4> Customer username: <%=customer.username %></h4>
          <p> Last name: <%= customer.lastname %></p>
          <p> created at: <%= customer.created_at %></p>
        </div>
        <div class="index-page-nav-links">
            <button><%= link_to "show", customer %></button>
          <%# <% if can? :delete, customer %> 
            <button><%= link_to "delete", customer_path(customer), method: :delete %></button>
          <%# <% end %> 
        </div>
      </div>
    <% end %>
  </div>
</div>
